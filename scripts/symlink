#!/bin/sh

DIR=$(cd `dirname $0` && pwd)

link (){
    target="$DIR/../$1"
    link=$2

    echo "ln -s $target $link"

    rm -f $link
    ln -s $target $link
}

link bashrc ~/.bashrc
link gitconfig ~/.gitconfig
link vim ~/.vim
link vimrc ~/.vimrc
link vimrc_git ~/.vimrc_git
link gvimrc ~/.gvimrc
link Xresources ~/.Xresources
link ackrc ~/.ackrc
link git-completion.bash ~/.git-completion.bash
link tmux.conf ~/.tmux.conf
link Xmodmap ~/.Xmodmap
link ctags ~/.ctags
link vimperatorrc ~/.vimperatorrc
link redshift.conf ~/.config/redshift.conf
link mplayer.conf ~/.mplayer/config
link xmonad.hs ~/.xmonad/xmonad.hs
link xinitrc ~/.xinitrc
link ghci ~/.ghci
